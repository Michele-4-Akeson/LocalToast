{
  "name": "Local Toast",
  "description": "A chrome extension that helps users automate repeated tasks for QA",
  "version": "1.2",
  "manifest_version": 3,
  "devtools_page": "index.html",
  "action": {
      "default_popup": "popup.html",
      "default_title": "Open the popup"
  },
  "icons": {
      "16": "toast.png",
      "48": "toast.png",
      "128": "toast.png"
  },
  "permissions": [
    "activeTab",
    "clipboardWrite",
    "storage",
    "scripting"
  ],

  "host_permissions": ["<all_urls>"],

  "content_scripts": [
    {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
    }
  ],

  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}